{% extends 'layout.html.twig' %}
{% block styles %}
    {{ parent() }}
    <style>
        .p__button {
            background: #B0B0B0;
            padding: 4px 14px;
            border-radius: 10px;
            border: 2px solid black;
            color: black;
            margin-top: 30px;
        }
        .p__button:hover, p__button:active, p__button:focus {
            background: black;
            padding: 4px 14px;
            border-radius: 10px;
            border: 2px solid #B0B0B0;
            color: #B0B0B0;
        }
        .text {
            text-align: justify;
            font-size: 19px;
        }
    </style>
{% endblock styles %}

{% block content %}
    <div class="row">
        <div class="col-8 offset-2">
            <div class="text-xs-center tm-textbox tm-textbox-padding tm-bg-white-translucent tm-3-col-textbox-inner">
                <h2 class="tm-text-title">{{ article.title }}</h2>
            </div>
            <div class="text-xs-left tm-textbox tm-textbox-padding tm-bg-white-translucent tm-3-col-textbox-inner">
                <div class="tm-text-title text" style="margin-bottom: 30px">{{ article.body|raw }}</div>
                <a class="p__button" href="{{ path('front') }}">Powr√≥t</a>
            </div>
        </div>
    </div>
{% endblock content %}