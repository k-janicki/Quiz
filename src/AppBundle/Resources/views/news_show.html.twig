{% extends 'layout.html.twig' %}
{% block styles %}
    {{ parent() }}
    <style>
        .p__button {
            background: #B0B0B0;
            padding: 4px 14px;
            border-radius: 10px;
            border: 2px solid black;
            color: black;
            margin-top: 30px;
        }
        .p__button:hover, p__button:active, p__button:focus {
            background: black;
            padding: 4px 14px;
            border-radius: 10px;
            border: 2px solid #B0B0B0;
            color: #B0B0B0;
        }
        .text {
            text-align: justify;
            font-size: 19px;
        }
    </style>
{% endblock styles %}
{% block navs %}
    <div class="col-10 d-flex justify-content-end">
        <ul class="nav nav-tabs" id="myTab" role="tablist">
            <li class="nav-item">
                <a class="nav-link " id="home-tab"  href="{{ path('front', {"link":"home"}) }}" role="tab"
                   aria-controls="home" aria-selected="true">Strona główna</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" id="quiz-tab" href="{{ path('front', {"link":"quiz"}) }}" role="tab"
                   aria-controls="quiz" aria-selected="false">Quizy</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" id="ranking-tab"  href="{{ path('front', {"link":"ranking"}) }}" role="tab"
                   aria-controls="ranking" aria-selected="false">Rankingi</a>
            </li>
            <li class="nav-item">
                <a class="nav-link active" id="news-tab" href="{{ path('front', {"link":"news"}) }}" role="tab"
                   aria-controls="news" aria-selected="false">Artykuły</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" id="logout-tab" data-toggle="tab" href="{{ path('front', {"link":"logout"}) }}" role="tab"
                   aria-controls="logout" aria-selected="false">Wyloguj się</a>
            </li>
        </ul>
    </div>
{% endblock %}
{% block content %}
    <div class="row" style="padding: 0 140px;">
        <div class="col-xs-12">
            <div class="text-xs-center tm-textbox tm-textbox-padding tm-bg-white-translucent tm-3-col-textbox-inner">
                <h2 class="tm-text-title">{{ article.title }}</h2>
            </div>
            <div class="text-xs-left tm-textbox tm-textbox-padding tm-bg-white-translucent tm-3-col-textbox-inner">
                <div class="tm-text-title text" style="margin-bottom: 30px">{{ article.body }}</div>
                <a class="p__button" href="{{ path('front') }}">Powrót</a>
            </div>
        </div>
    </div>
{% endblock content %}